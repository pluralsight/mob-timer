{
  "name": "mob-timer",
  "engines": {
    "node": "12.0.0"
  },
  "description": "A cross-platform mob-timer built on Electron for doing Mob Programming.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-packager . --platform=win32 --arch=x64 --out=dist --icon=icon --overwrite",
    "build-mac": "electron-packager . --platform=darwin --arch=x64 --out=dist --icon=icon --overwrite",
    "package-mac": "electron-installer-dmg ./dist/mob-timer-darwin-x64/mob-timer.app mob-timer --out=./dist/mob-timer-darwin-x64 --overwrite",
    "build-linux": "electron-packager . --platform=linux --arch=x64 --out=dist --icon=icon --overwrite",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "mocha",
    "tdd": "mocha -w",
    "watch": "mocha -w",
    "coverage": "nyc mocha && nyc report --reporter=text-lcov | coveralls"
  },
  "mocha": {
    "spec": "!(node_modules|dist)/**/*.test.js",
    "recursive": true
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "test/**/*.*",
      "dist/**/*.*"
    ],
    "reporter": [
      "text-summary"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mob-timer/mob-timer.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "private": true,
  "bugs": {
    "url": "https://github.com/mob-timer/mob-timer/issues"
  },
  "homepage": "https://mob-timer.github.io",
  "devDependencies": {
    "coveralls": "^3.0.3",
    "electron": "^5.0.0",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^13.0.1",
    "electron-releases": "^3.97.0",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^9.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "prettier": "^1.16.4",
    "sinon": "^7.1.1"
  },
  "dependencies": {
    "debounce": "^1.2.0",
    "uuid": "^3.2.1"
  }
}
